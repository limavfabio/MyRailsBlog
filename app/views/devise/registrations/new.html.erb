<h2>Sign up</h2>

<div class="flex flex-col items-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html=> {:class => 'w-2/3'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field input-primary">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full" %>
    </div>

    <div class="field input-primary">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full" %>
    </div>

    <div class="field input-primary">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full" %>
    </div>

    <div class="field input-primary">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full" %>
    </div>

    <div class="actions btn-primary w-full mt-4">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
